# CareerNest Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/careernest
# Example for Supabase: postgresql://postgres:password@db.supabase.co:5432/postgres
# Example for Neon: postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/careernest

# MTN MoMo API Configuration
# Base URL for MoMo API
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MOMO_SANDBOX_BASE_URL=https://sandbox.momodeveloper.mtn.com

# Collections API (Receiving Payments) - YOU HAVE THESE
MOMO_COLLECTIONS_SUBSCRIPTION_KEY=b09bff7ce0c54f9fafe3bd78bb74279d
MOMO_COLLECTIONS_USER_ID=your-collections-api-user-id-here
MOMO_COLLECTIONS_API_KEY=your-collections-api-key-here

# Disbursements API (Sending Payments) - YOU HAVE THESE
MOMO_DISBURSEMENTS_SUBSCRIPTION_KEY=22dd0dec976649989455bf871abb24b0
MOMO_DISBURSEMENTS_USER_ID=your-disbursements-api-user-id-here
MOMO_DISBURSEMENTS_API_KEY=your-disbursements-api-key-here

# Callback Configuration
MOMO_CALLBACK_HOST=https://your-app.vercel.app
# For local development: http://localhost:5000

# Application Configuration
NODE_ENV=development
PORT=5000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# JWT Configuration (if using JWT)
JWT_SECRET=your-jwt-secret-key-here

# OpenAI API (for AI services)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (for job alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-app.vercel.app

# Security
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_MOMO_PAYMENTS=true
ENABLE_AI_SERVICES=true
ENABLE_JOB_ALERTS=true
ENABLE_MULTILINGUAL=true

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
